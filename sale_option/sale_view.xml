<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>


        <record id="view_sale_line_form" model="ir.ui.view">
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/form/group/group/field[@name='price_unit']" position="after">
                    <field name="base_price_unit"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/form/div/field[@name='invoice_lines']" position="after">
                    <field name="option_ids">
                        <tree editable="bottom">
                            <field name="parent_id" invisible="1"/>
                            <field name="product_id" domain="[('option_for_product_ids', '=', parent.product_id)]"/>
                            <field name="uom_qty"/>
                            <field name="price_unit"/>
                        </tree>
                    </field>

                </xpath>
            </field>
        </record>

    </data>
</openerp>
